{# templates/gb/gbform.html.twig #}

{% extends 'gb/gbindex.html.twig' %}

{% block gbContent %}
    <h3>Add new entry</h3>
    <form method="POST" action="{{ path('gbAdd') }}">
        <table>
            <tr><td>Name:</td>
                <td><input type="text" name="entry_name" /></td></tr>
            <tr><td>Email:</td>
                <td><input type="email" name="entry_email" /></td></tr>
            <tr><td colspan="2"><textarea name="entry_text"
                              style="width:500px;height: 300px"></textarea></td></tr>
            <tr><td colspan="2">
                    <input type="submit" value="SEND" /></td></tr>
        </table>
    </form>
{% endblock %}