{# app/Resources/views/cars/cars.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}
    My Car Manager Webpage
{% endblock %}
{% block body %}
    {% set notices = app.session.flashbag.get('notice') %}
    {% for msg in notices %}
        <p style="color:red">{{ msg }}</p>
    {% endfor %}
    {% if notices is not empty %}
        <hr/>
    {% endif %}
    {# Routes: carlist(brandId?), carshow(carId), cardel(carId),
      caredit(carId?) #}
    <p><a href="{{ path('carlist') }}">Back to the LIST page</a></p>
    {% block carbody %}
    {% endblock %}
{% endblock %}